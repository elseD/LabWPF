<Window x:Class="Lab1WpfApp1.Calculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1WpfApp1"
        mc:Ignorable="d"
        Title="Calculator" Height="300" Width="250">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="DarkBlue" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Column="1" Grid.ColumnSpan="5" Background="White" BorderBrush="Gray" BorderThickness="1" Margin="10,10,10,2" Height="80">
            <TextBlock x:Name="enterBlock" TextAlignment="Right" VerticalAlignment="Bottom" Padding="0,20,0,0" FontWeight="Light" FontFamily="Arial" FontSize="20" />
        </Border>

        <UniformGrid Rows="6" Columns="4" Margin="10 5 10 15" Grid.Row="1" Grid.Column="0">
            <Button Content="%" />
            <Button Content="CE" />
            <Button Content="C" />
            <Button Content="⌫" />

            <Button Content="1/x" />
            <Button Content="х²" />
            <Button Content="√x" />
            <Button Content="÷" />

            <Button Content="1" Background="GhostWhite" />
            <Button Content="2" Background="GhostWhite" />
            <Button Content="3" Background="GhostWhite" />
            <Button Content="+" />

            <Button Content="4" Background="GhostWhite" />
            <Button Content="5" Background="GhostWhite" />
            <Button Content="6" Background="GhostWhite" />
            <Button Content="-" />

            <Button Content="7" Background="GhostWhite" />
            <Button Content="8" Background="GhostWhite" />
            <Button Content="9" Background="GhostWhite" />
            <Button Content="*" />

            <Button Content="+/-" />
            <Button Content="0" Background="GhostWhite" />
            <Button Content="." />
            <Button Content="=" />
        </UniformGrid>

    </Grid>
</Window>
