<Window x:Class="Lab1WpfApp1.CalculatorUniform"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Calculator" MinHeight="270" MinWidth="217">
    <Grid MinWidth="215"  MinHeight="270" HorizontalAlignment="Center">
        <Grid.Background>
            <SolidColorBrush Color="DarkBlue" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="1" Background="White" BorderBrush="Gray" BorderThickness="1" Margin="0,10,0,2">
            <TextBlock x:Name="enterUniformBlock" TextAlignment="Right" VerticalAlignment="Bottom" Padding="0,20,0,0" FontWeight="Light" FontFamily="Arial" FontSize="20" />
        </Border>

        <UniformGrid Columns="4" Rows="5" Grid.Row="1" Grid.Column="1">
            <Button Content="%" />
            <Button Content="CE" />
            <Button Content="C" />
            <Button Content="x²"/>

            <Button Content="1" Background="GhostWhite" />
            <Button Content="2" Background="GhostWhite" />
            <Button Content="3" Background="GhostWhite" />
            <Button Content="+" />

            <Button Content="4" Background="GhostWhite" />
            <Button Content="5" Background="GhostWhite" />
            <Button Content="6" Background="GhostWhite" />
            <Button Content="-"/>

            <Button Content="7" Background="GhostWhite" />
            <Button Content="8" Background="GhostWhite"  />
            <Button Content="9" Background="GhostWhite" />
            <Button Content="*" />

            <Button Content="," />
            <Button Content="0" Background="GhostWhite" />
            <Button Content="=" />
            <Button Content="/"/>
        </UniformGrid>
        

    </Grid>
</Window>
